{
  "name": "@sounisi5011/vec-draw",
  "version": "0.0.1",
  "description": "SVGを書きやすくするDSL",
  "homepage": "https://github.com/sounisi5011/vec-draw",
  "bugs": {
    "url": "https://github.com/sounisi5011/vec-draw/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sounisi5011/vec-draw.git"
  },
  "license": "MIT",
  "author": "sounisi5011",
  "files": [
    "dist/"
  ],
  "main": "dist/index",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run-s clean:build build:parser build:typescript",
    "build:parser": "node ./scripts/parser-generate.js ./src/parser/dsl.parser.pegjs ./src/parser/dsl.parser.ts",
    "build:typescript": "run-p build:typescript:*",
    "build:typescript:commonjs": "tsc",
    "build:typescript:esm": "run-s build:typescript:esm:tsc build:typescript:esm:rename build:typescript:esm:clean",
    "build:typescript:esm:clean": "rimraf ./dist.esm/",
    "build:typescript:esm:rename": "node ./scripts/js-to-mjs.js ./dist.esm/ ./dist/",
    "build:typescript:esm:tsc": "tsc -p ./tsconfig.esm.json --outDir ./dist.esm/",
    "clean": "run-p clean:*",
    "clean:build": "rimraf './dist{,.*}/' './**/*.parser.{js,ts}'",
    "lint": "run-p lint:*",
    "lint:ecmascript": "eslint --ext .mjs --ext .js ./",
    "lint:typescript": "npm-run-all build:parser --parallel lint:typescript:*",
    "lint:typescript:src": "run-p lint:typescript:src:*",
    "lint:typescript:src:eslint": "eslint --config ./.eslintrc-typescript.yml --ext .ts ./src/",
    "lint:typescript:src:tsc": "tsc --noEmit",
    "lint:typescript:test": "run-p lint:typescript:test:*",
    "lint:typescript:test:eslint": "eslint --config ./.eslintrc-typescript.yml --ext .ts ./test/",
    "lint:typescript:test:tsc": "tsc -p ./test/ --noEmit",
    "test": "run-s lint test:ava",
    "test:ava": "ava"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node scripts/commit-ban.js && lint-staged",
      "pre-push": "node scripts/push-ban.js",
      "prepare-commit-msg": "node scripts/merge-ban.js && node scripts/commit-template.js"
    }
  },
  "lint-staged": {
    "!(package).json|*.{yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "eslint --config ./.eslintrc-typescript.yml --fix",
      "node ./scripts/generate-all-export-file.js",
      "git add"
    ],
    "*.{mjs,js}": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "sort-package-json",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "11.x",
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "ava": "^1.2.0",
    "await-spawn": "2.x",
    "eslint": "5.x",
    "eslint-config-airbnb-base": "13.x",
    "eslint-config-prettier": "4.x",
    "eslint-plugin-import": ">=2.17.1 <3.0.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "3.x",
    "eslint-plugin-promise": "^4.0.1",
    "git-branch": "^2.0.1",
    "glob": "7.x",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "make-dir": "3.x",
    "npm-run-all": "^4.1.5",
    "pegjs": "^0.10.0",
    "prettier": "1.x",
    "prettier-package-json": "2.x",
    "rimraf": "2.x",
    "sort-package-json": "1.x",
    "ts-node": "8.x",
    "ts-pegjs": "0.2.x",
    "typescript": "3.x"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "ava": {
    "compileEnhancements": false,
    "require": [
      "ts-node/register/transpile-only"
    ],
    "extensions": [
      "ts"
    ]
  }
}
